{
    "manifest_version": 3,
    "name": "AI Assistant",
    "version": "1.0",
    "permissions": ["activeTab", "scripting", "storage", "tabs", "webNavigation", "webRequest", "declarativeContent", "contextMenus", "alarms", "notifications","audioCapture" ],
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["readability.js", "content.js"]
        }
    ]
  }
  